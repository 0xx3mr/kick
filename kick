-- اسم اللاعب الذي ترغب في طرده
local targetPlayerName = "3MR"

-- دالة لفحص اللاعبين في الخادم
function onPlayerJoin(player)
    -- تحقق مما إذا كان اسم اللاعب يطابق الاسم المستهدف
    if player.name == targetPlayerName then
        -- طرد اللاعب إذا تم العثور على تطابق
        print("يتم طرد اللاعب: " .. player.name) -- سجل للطباعة
        kickPlayer(player, "لقد تم طردك بسبب اسم غير مرغوب فيه.")
    end
end

-- دالة لإدارة تحديثات الخادم (اختياري)
function onUpdate()
    -- يمكن إضافة المزيد من الأكواد هنا إذا كنت ترغب في مراقبة أشياء أخرى
end

-- هذه هي دالة الطرد باستخدام API الخاصة بـ Assetto Corsa
function kickPlayer(player, message)
    -- هذه الدالة تطرد اللاعب مع رسالة
    -- تأكد من أن الخادم يدعم هذه الدالة
    if player then
        player.kick(message)
    end
end
